@model CBLSummer09052016Budgeter.Models.CodeFirst.Household

@{
    ViewBag.Title = "Leave Household";
}
@ViewBag.Message

<h3>Are you sure you want to leave this household?</h3>
<div>
    <h4>Household</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
