
@model CBLSummer09052016Budgeter.Models.CodeFirst.Household
<h2>RemoveUser</h2>

<h3>Are you sure you want to remove user from this household?</h3>
<div>
    <h4>Household</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        @if (Model.User.Select(n => n.DisplayName) != null)
        {
        <dd>
            @Html.DisplayFor(model => model.User.Select(n => n.DisplayName))
        </dd>
        }
        else
        {
            <dd>
                @Html.DisplayFor(model => model.User.Select(n => n.Email))
            </dd>
        }
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.Id)
        <div class="form-actions no-color">
            <input type="submit" value="Leave" class="btn btn-default" /> |
            @Html.ActionLink("Cancel", "Index")
        </div>
    }
</div>